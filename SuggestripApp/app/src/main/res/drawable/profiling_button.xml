<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="12dp"
                />
            <gradient
                android:angle="180"
                android:centerX="35%"
                android:centerColor="#2f6699"
                android:startColor="#2f6699"
                android:endColor="#2f6699"
                android:type="linear"
                />
            <size
                android:width="201dp"
                android:height="65dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="12dp"
                />
            <gradient
                android:angle="180"
                android:centerX="35%"
                android:centerColor="#2B87FF"
                android:startColor="#6898F7"
                android:endColor="#2274F0"
                android:type="linear"
                />
            <size
                android:width="201dp"
                android:height="65dp"
                />
        </shape>
    </item>
</selector>


